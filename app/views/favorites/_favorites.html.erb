<% if current_user %>
  <div class="hiragana-fav">
    <% if hiragana.is_faved_by(current_user) %>
      <%= link_to "#" do %>
        <i class="fa fa-heart faved faved-on" id ="<%=hiragana.id%>"></i>
      <% end %>
    <% else %>
      <%= link_to "#" do %>
        <i class="fa fa-heart faved faved-off" id ="<%=hiragana.id%>"></i>
      <% end %>
    <% end  %>
  </div>
<% end %>

